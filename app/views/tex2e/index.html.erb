<div class="markdown-body">
  <h1>Listing Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Tag</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= cut_off post.title, 20 %></td>
          <td><%= cut_off post.tag, 20 %></td>
          <td><%= cut_off post.text,  40 %></td>
          <td><%= link_to '続きを読む', show_tex2e_path(post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>