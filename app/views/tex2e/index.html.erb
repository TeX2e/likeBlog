
<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each.with_index do |post, index| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to '続きを読む', show_tex2e_path(index + 1) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>