<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @post.date %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @post.tag %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p><strong>HTML Text:</strong></p>
<hr>
<div class="markdown-body">
  <div class="codehilite">
    <%= @post.html_text.html_safe if @post.html_text %>
  </div>
</div>
<hr>

<p>
  <strong>Publish:</strong>
  <%= @post.publish %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
