
<aside>
  <% if @navigate_tags %>
    <%= link_to 'Home', posts_path %><br>
    <% @navigate_tags.each do |tag| %>
      â”” <%= link_to tag, posts_path(tag: tag) %><br>
    <% end %>
  <% end %>
</aside>

<main role="main">
  <p id="notice"><%= notice %></p>
  
  <div class="markdown-body">
    <h1>Listing Posts</h1>

    <%= link_to 'New Post', new_post_path %> | <%= link_to 'Publish View', dnote_path %>
    <br><br>

    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Title</th>
          <th>Tag</th>
          <th>Publish</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.reverse_each do |post| %>
          <tr>
            <td><%= post.date %></td>
            <td><%= cut_off post.title, 20 %></td>
            <td><%= cut_off post.tag, 20 %></td>
            <td><%= post.publish %></td>
            <td>
              <%= link_to 'Show', post %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</main>

